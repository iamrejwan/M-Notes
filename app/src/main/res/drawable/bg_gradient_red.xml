<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="6dp" android:topLeftRadius="6dp" android:topRightRadius="6dp" android:bottomLeftRadius="6dp" android:bottomRightRadius="6dp"/>
                    <gradient
                        android:startColor="@color/red_600"
                        android:endColor="@color/red_600"
                        android:angle="90"
                        android:centerColor="@color/red_600"/>
                    <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp"/>
                    <size android:height="40dp" android:width="110dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="6dp" android:topLeftRadius="6dp" android:topRightRadius="6dp" android:bottomLeftRadius="6dp" android:bottomRightRadius="6dp"/>
                    <gradient android:startColor="@color/red_400" android:endColor="@color/red_600" android:angle="180" android:centerColor="@color/red_600"/>
                    <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp"/>
                    <size android:height="40dp" android:width="110dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
