<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/margin_3"/>
                    <solid android:color="@color/grey_100"/>
                    <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/black"/>
                    <corners android:radius="@dimen/margin_3"/>
                    <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
